# Application
APP_ENV=production
APP_SECRET_KEY=change-me-to-a-random-secret-key

# Supabase (shared with center-dashboard)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Security
SESSION_HTTPS_ONLY=true
AUTO_SEED_DEFAULT_STAFF=false

# Cloudflare R2 (image storage)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_API_TOKEN=your-cloudflare-api-token
R2_BUCKET_NAME=luggage-images

# Cloudflare Tunnel
TUNNEL_TOKEN=eyJ...your-tunnel-token-here

# GitHub Container Registry (for Watchtower auto-deploy)
# Create a PAT at https://github.com/settings/tokens with read:packages scope
GHCR_USER=your-github-username-or-org
GHCR_TOKEN=ghp_your-pat-with-read-packages-scope
